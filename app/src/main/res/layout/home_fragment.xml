                    android:background="@drawable/chest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_chest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:text="chest exercise"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_go_next"
                        android:padding="10dp"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#1E1A1A"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABS Workout"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:textSize="16sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/abs_beginner_cardview"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:background="@drawable/absbeginner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_beginner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:text="abs beginner"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_go_next"
                        android:padding="10dp"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/abs_inter_cardview"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:background="@drawable/absinter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_inter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAllCaps="true"
