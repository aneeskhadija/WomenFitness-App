                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_go_next"
                        android:padding="10dp"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/butt_inter_cardview"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:background="@drawable/buttintermediate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_butt_inter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:text="butt intermediate"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_go_next"
                        android:padding="10dp"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/butt_advance_cardview"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:background="@drawable/buttadvance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_butt_advance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:text="butt advance"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_go_next"
                        android:padding="10dp"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#1E1A1A"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LEG Workout"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="16sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/leg_beginner_cardview"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:background="@drawable/leg1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_leg_beginner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:text="leg beginner"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_go_next"
                        android:padding="10dp"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/leg_inter_cardview"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:background="@drawable/leg2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_leg_inter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:text="leg intermediate"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_go_next"
                        android:padding="10dp"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/leg_advance_cardview"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:background="@drawable/leg3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_leg_advance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:text="leg advance"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_go_next"
                        android:padding="10dp"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#1E1A1A"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ARMS Workout"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="16sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/arms_cardview"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:background="@drawable/arm_beginner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_arms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:text="arm exercise"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="22sp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_go_next"
                        android:padding="10dp"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#1E1A1A"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BEAUTY TIPS"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="16sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/beauty_cardview"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:background="@drawable/beauty_tips"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_beauty_tis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:text="Beauty Tips"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="22sp" />

